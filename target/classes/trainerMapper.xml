<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="trainer">
	<!-- 탈퇴 -->
	<delete id="T_delete" parameterType="string">
		delete from trainer where t_id=#{t_id} 
	</delete>
	
	<!-- 나의 회원 목록 보기 -->
	<select id="SelectByAllUserList" parameterType="string" resultType="UsersVO">
		select * from users WHERE t_id=#{t_id} 
	</select>
	
	<!-- 나의 회원 정보 보기 -->
	<select id="selectByUserInfo" parameterType="string" resultType="UsersVO">
		select * from users where t_id=#{t_id}
	</select>
	
	<!-- 한개얻기(t_id) -->
	<select id="selectBytrainerid" parameterType="string" resultType="MemberVO">
		select * from trainer where t_id=#{t_id}
	</select>
