<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="users">
	<!-- 회원가입 -->
	<insert id="U_insert" parameterType="UsersVO">
	INSERT INTO users VALUES 
	(#{u_id},#{u_password},#{u_nicname},#{u_name},#{u_birth},#{u_addr}
	,#{u_email},0,0,#{startday},#{endday},#{gender},#{t_id})
	</insert>
	
	<!-- 회원 탈퇴 -->
	<delete id="U_delete" parameterType="UsersVO">
		delete from users where u_id=#{u_id}
	</delete>
	
	<!-- 회원 정보 수정 -->
	<update id="U_update" parameterType="UsersVO">
		update users set
			u_password=#{u_password},
			u_nicname = #{u_nicname},
			u_addr = #{u_addr},
			u_email = #{u_email}
		where
			u_id=#{u_id}
	</update>
	
	<!-- 동일한 아이디 갯수 얻기 (중복확인) -->
	<select id="SelectByUserId" parameterType="string" resultType="int">
		select count(*) from users where u_id=#{u_id}
	</select>
	
	<!-- 동일한 닉네임 갯수 얻기 (중복확인) -->
	<select id="SelectByUserNickname" parameterType="string" resultType="int">
		select count(*) from users where u_nicname=#{u_nicname}
	</select>
	
	<!-- 1개 얻기 (user_id)로 얻기 -->
	<select id="SelectByUserInfo" parameterType="string" resultType="UsersVO">
		select * from users where u_id=#{u_id}
	</select>
	<!-- 자신의 강사 가져오기 -->
	<select id="SelectByTrainer" parameterType="string" resultType="TrainerVO">
		select * from trainer where t_id=#{t_id}
	</select> 
	
	<!-- 비밀번호 변경 -->
	<update id="ChangePassword" parameterType="hashmap">
		update users set u_password=#{u_password} where u_id=#{u_id}
	</update>
	
	<!-- 아이디 찾기 (name으로 가져오기) -->
	<select id="FindUserId" parameterType="string" resultType="string">
		select u_id from users where u_email=#{u_email}
	</select>

</mapper>
