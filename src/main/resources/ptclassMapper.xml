<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pt">

	<!-- 트레이너 pt일정표 등록하기 -->
	<insert id="P_insert" parameterType="PTClassVO">
		insert into ptclass values
		(#{pt_code},#{pttime},#{t_id},#{r_check})
	</insert>
	
	<!-- 트레이너 pt일정표 변경하기 -->
	<update id="P_update" parameterType="PTClassVO">
		update ptclass set
			pttime=#{pttime},
			<!-- pttime 이렇게 안돼면 todate로 해보자 -->
			t_id = #{t_id},
			r_check = #{r_check}
		where
			pt_code=#{pt_code}
	</update>
	
	<!-- 트레이너 pt일정표 삭제하기 -->
	<delete id="P_delete" parameterType="PTClassVO">
		delete from ptclass where pt_code=#{pt_code}
	</delete>
	
	<!-- 트레이너 pt일정표 확인하기 -->
	<select id="P_check" parameterType="PTClassVO" resultType="PTClassVO">
		select * from ptclass where pt_code=#{pt_code}
	</select>

</mapper>


