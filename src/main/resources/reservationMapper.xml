<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="reservation">

	<!-- 일별 pt수강 목록 가져오기 -->
	<select id="selectPtOneDay" parameterType="hashmap" resultType="ptClassVO">
		select * from ptclass where id=#{id} AND TO_CHAR(pttime,'YYYY-MM-dd') = TO_DATE(#{pttime},'YYYY-MM-dd')
	</select>
	
	<!-- 예약 하기 -->
	<insert id="insertReservation" parameterType="ReservationVO">
		insert into reservation values(#{id},#{idx})
	</insert>
	
	<!-- 예약 취소하기 -->
	<delete id="deleteReservation" parameterType="ReservationVO">
		delete from reservation where id=#{id} and idx=#{idx}
	</delete>
	
	<!-- 나의 예약목록 확인하기 -->
</mapper>


